@using System.Globalization
@model ADServerManagementWebApplication.Models.RoleViewModel

@{
	ViewBag.Title = "Uprawnienia użytkownika";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-danger">
	<div class="panel panel-heading">
		<h3>@ViewBag.Title</h3>
	</div>
	@using (Html.BeginForm())
	{
		<div class="panel-body">
			<hr />
			@Html.AntiForgeryToken()
			@Html.ValidationSummary(true)
			@Html.HiddenFor(model => model.ID)

			<div class="form-group">
				@Html.LabelFor(model => model.Name)
				@Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.Name)
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.Type)
				@Html.DropDownListFor(model => model.Type, Model.Roles, new { @class = "form-control" })
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.Commission)
				@Html.TextBoxFor(model => model.Commission, new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.Commission)
			</div>

			<div class="panel-footer col-md-12">
				<input type="submit" value="Zapisz" class="btn btn-success" />
				<a href="@Url.Action("Index", "Default", new { ctr = "Account", act = "Role" })" class="btn btn-danger">Wróć</a>
			</div>
		</div>
	}
</div>
