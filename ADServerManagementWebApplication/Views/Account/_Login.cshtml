@model ADServerManagementWebApplication.Models.LoginViewModel

<section id="loginForm">
	@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "left", role = "form" }))
	{
		@Html.AntiForgeryToken()
		<hr />
		@Html.ValidationSummary(true)
		<div class="form-group col-md-12">
			@Html.LabelFor(m => m.UserName, new { @class = "col-md-2 col-md-offset-3 control-label" })
			<div class="col-md-2" style="max-width: 300px">
				@Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
				@Html.ValidationMessageFor(m => m.UserName)
			</div>
		</div>
		<div class="form-group col-md-12">
			@Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-md-offset-3 control-label" })
			<div class="col-md-2" style="max-width: 300px">
				@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
				@Html.ValidationMessageFor(m => m.Password)
			</div>
		</div>
		<div class="form-group col-md-12">
			<div class="col-md-offset-5 col-md-4">
				<div class="checkbox">
					@Html.CheckBoxFor(m => m.RememberMe)
					@Html.LabelFor(m => m.RememberMe)
					<input type="submit" value="Zaloguj" class="btn btn-default col-md-offset-3" />
				</div>
				@Html.ActionLink("Zarejestruj się", "Register")
			</div>
		</div>
	}
</section>