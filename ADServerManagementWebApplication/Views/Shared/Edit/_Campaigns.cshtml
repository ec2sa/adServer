<fieldset class="panel-group">
	<table class="filters-table">
		<tr>
			<td class="col-width-180">
				<div class="single-filter-div single-filter-div100">
					@Html.Label("Filter_ConnectedCampaigns_Name", "Filtruj po nazwie : ")
					@Html.TextBox("Filter_ConnectedCampaigns_Name", "", new { @class = "form-control" })
				</div>
				<input class="btn btn-sm btn-success" type="button" value="Filtruj" onclick="RefreshConnectedCampaignsUI();" />
				<input class="btn btn-sm btn-warning" type="button" value="Wyczyść" onclick="ClearConnectedCampaignsFilters();" />
			</td>
		</tr>
	</table>
</fieldset>

<div>
	<input id="btnAddCampaign" type="button" class="btn btn-success" value="Dodaj kampanię" onclick="AddCampaignsConnection()" />
	<input id="btnRemoveCampaign" type="button" class="btn btn-danger" value="Usuń zaznaczone kampanie" onclick="RemoveCampaignsConnection()" />
</div>

<table id="connectedCampaignsTable" class="table table-striped table-condensed table-bordered">
	<thead>
		<tr>
			<th class="text-center" width="8%"><input onclick="CheckOrUncheckOptions('connectedCampaignsTable')" value="Zaznacz/odznacz" class="btn btn-link" type="button" /> </th>
			<th class="text-right"><input onclick="SortCampaigns('Id', true)" value="Id" class="btn btn-link" type="button" /></th>
			<th class="text-left"><input onclick="SortCampaigns('Name', true)" value="Nazwa" class="btn btn-link" type="button" /></th>
			<th class="text-center"><input onclick="SortCampaigns('IsActive', true)" value="Aktywna" class="btn btn-link" type="button" /></th>
			<th class="text-right"><input onclick="SortCampaigns('StartDate', true)" value="Data rozpoczęcia" class="btn btn-link" type="button" /></th>
			<th class="text-right"><input onclick="SortCampaigns('EndDate', true)" value="Data zakończenia" class="btn btn-link" type="button" /></th>
			<th class="text-right"><input onclick="SortCampaigns('ViewValue', true)" value="Wyświetlenie" class="btn btn-link" type="button" /></th>
			<th class="text-right"><input onclick="SortCampaigns('ClickValue', true)" value="Przekierowanie" class="btn btn-link" type="button" /></th>
		</tr>
	</thead>
	<tbody></tbody>
</table>

<div id="dialog-availableCampaigns" style="display:none" title="Wybierz kampanie">
	<p>
		<fieldset class="panel-group">
			<table class="filters-table">
				<tr>
					<td class="col-width-180">
						<div class="single-filter-div single-filter-div100">
							@Html.Label("Filter_AvailableCampaigns_Name", "Filtruj po nazwie : ")
							@Html.TextBox("Filter_AvailableCampaigns_Name", "", new { @class = "form-control" })
						</div>
					</td>
				</tr>
				<tr>
					<td class="col-width-180" style="vertical-align: bottom" rowspan="2">
						<div class="single-filter-div single-filter-div100">
							<input class="btn btn-sm btn-success" type="button" value="Filtruj" onclick="RefreshAvailableCampaignsUI();" />
							<input class="btn btn-sm btn-warning" type="button" value="Wyczyść" onclick="ClearAvailableCampaignsFilters();" />
						</div>
					</td>
				</tr>
			</table>
		</fieldset>
		<table id="availableCampaignsTable" class="table table-striped table-condensed table-bordered">
			<thead>
				<tr>
					<th class="text-center" width="8%"><input onclick="CheckOrUncheckOptions('availableCampaignsTable')" value="Zaznacz/odznacz" class="btn btn-link" type="button" /> </th>
					<th class="text-right"><input onclick="SortCampaigns('Id', false)" value="Id" class="btn btn-link" type="button" /></th>
					<th class="text-left"><input onclick="SortCampaigns('Name', false)" value="Nazwa" class="btn btn-link" type="button" /></th>
					<th class="text-center"><input onclick="SortCampaigns('IsActive', false)" value="Aktywna" class="btn btn-link" type="button" /></th>
					<th class="text-right"><input onclick="SortCampaigns('StartDate', false)" value="Data rozpoczęcia" class="btn btn-link" type="button" /></th>
					<th class="text-right"><input onclick="SortCampaigns('EndDate', false)" value="Data zakończenia" class="btn btn-link" type="button" /></th>
					<th class="text-right"><input onclick="SortCampaigns('ViewValue', false)" value="Wyświetlenie" class="btn btn-link" type="button" /></th>
					<th class="text-right"><input onclick="SortCampaigns('ClickValue', false)" value="Przekierowanie" class="btn btn-link" type="button" /></th>
				</tr>
			</thead>
			<tbody></tbody>
		</table>

	</p>
</div>
