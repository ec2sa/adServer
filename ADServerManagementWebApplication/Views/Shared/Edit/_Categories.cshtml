<fieldset class="panel-group">
	<table class="filters-table">
		<tr>
			<td class="col-width-180">
				<div class="single-filter-div single-filter-div100">
					@Html.Label("Filter_ConnectedCategories_Name", "Filtruj po nazwie/kodzie : ")
					@Html.TextBox("Filter_ConnectedCategories_Name", "", new { @class = "form-control" })
				</div>
				<input class="btn btn-sm btn-success" type="button" value="Filtruj" onclick="RefreshConnectedCategoriesUI();" />
				<input class="btn btn-sm btn-warning" type="button" value="Wyczyść" onclick="ClearConnectedCategoriesFilters();" />
			</td>
	</table>
</fieldset>
<div>
	<input id="btnAddCategory" type="button" class="btn btn-success" value="Dodaj kategorię" onclick="AddCategoryConnection()" />
	<input id="btnRemoveCategory" type="button" class="btn btn-danger" value="Usuń zaznaczone kategorie" onclick="RemoveCategoryConnection()" />
</div>
<table id="connectedCategoriesTable" class="table table-striped table-condensed table-bordered">
	<thead>
		<tr>
			<th class="text-center" width="8%">
				<input type="button" value="Zaznacz/Odznacz" class="btn btn-link" onclick="CheckOrUncheckOptions('connectedCategoriesTable')" />
			</th>
			<th class="text-right">
				<input onclick="SortCategories('Id', true)" value="Id" class="btn btn-link" type="button" />
			</th>
			<th class="text-left">
				<input onclick="SortCategories('Name', true)" value="Nazwa" class="btn btn-link" type="button" />
			</th>
			<th class="text-center">
				<input onclick="SortCategories('Code', true)" value="Kod" class="btn btn-link" type="button" />
			</th>
		</tr>
	</thead>
	<tbody></tbody>
</table>

<div id="dialog-availableCategories" style="display: none" title="Wybierz kategorie">
	<p>
		<fieldset class="panel-group">
			<table class="filters-table">
				<tr>
					<td class="col-width-180">
						<div class="single-filter-div single-filter-div100">
							@Html.Label("Filter_AvailableCategories_Name", "Filtruj po nazwie/kodzie : ")
							@Html.TextBox("Filter_AvailableCategories_Name", "", new { @class = "form-control" })

						</div>
					</td>
				</tr>
				<tr>
					<td class="col-width-180" style="vertical-align: bottom" rowspan="2">
						<div class="single-filter-div single-filter-div100">
							<input class="btn btn-sm btn-success" type="button" value="Filtruj" onclick="RefreshAvailableCategoriesUI();" />
							<input class="btn btn-sm btn-warning" type="button" value="Wyczyść" onclick="ClearAvailableCategoriesFilters();" />
						</div>
					</td>
				</tr>
			</table>
		</fieldset>
		<table id="availableCategoriesTable" class="table table-striped table-condensed table-bordered">
			<thead>
				<tr>
					<th class="text-center" width="8%">
						<input onclick="CheckOrUncheckOptions('availableCategoriesTable')" value="Zaznacz/odznacz" class="btn btn-link" type="button" />
					</th>
					<th class="text-right">
						<input onclick="SortCategories('Id', false)" value="Id" class="btn btn-link" type="button" />
					</th>
					<th class="text-left">
						<input onclick="SortCategories('Name', false)" value="Nazwa" class="btn btn-link" type="button" />
					</th>
					<th class="text-center">
						<input onclick="SortCategories('Code', false)" value="Kod" class="btn btn-link" type="button" />
					</th>
				</tr>
			</thead>
			<tbody></tbody>
		</table>

	</p>
</div>
