<fieldset class="panel-group">
	<table class="filters-table">
		<tr>
			<td class="col-width-180">
				<div class="single-filter-div single-filter-div100">
					@Html.Label("Filter_ConnectedDevices_Name", "Filtruj po nazwie/opisie : ")
					@Html.TextBox("Filter_ConnectedDevices_Name", "", new { @class = "form-control" })
				</div>
				<input class="btn btn-sm btn-success" type="button" value="Filtruj" onclick="RefreshConnectedDevicesUI();" />
				<input class="btn btn-sm btn-warning" type="button" value="Wyczyść" onclick="ClearConnectedDevicesFilters();" />
			</td>
		</tr>
	</table>
</fieldset>
<div>
	<input id="btnRemoveObject" type="button" class="btn btn-danger" value="Usuń zaznaczone obiekty" onclick="RemoveDevice()" />
</div>
<table class="table table-striped table-condensed table-bordered">
	<thead>
		<tr>
			<th class="text-center" width="8%">
				<input onclick="CheckOrUncheckOptions('Devices')" value="Zaznacz/odznacz" class="btn btn-link" />
			</th>
			<th class="text-right">
				<input onclick="SortDevices('Id', true)" value="Id" class="btn btn-link" type="button" />
			</th>
			<th class="text-left">
				<input onclick="SortDevices('Name', true)" value="Nazwa" class="btn btn-link" type="button" />
			</th>
			<th class="text-center">
				<input onclick="SortDevices('Description', true)" value="Opis" class="btn btn-link" type="button" />
			</th>
		</tr>
	</thead>
	<tbody id="Devices">
	</tbody>
</table>

