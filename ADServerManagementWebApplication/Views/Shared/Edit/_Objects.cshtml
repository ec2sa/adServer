<fieldset class="panel-group">
	<table class="filters-table">
		<tr>
			<td class="col-width-180">
				<div class="single-filter-div single-filter-div100">
					@Html.Label("Filter_ConnectedObjects_Name", "Filtruj po nazwie/typie/mime : ")
					@Html.TextBox("Filter_ConnectedObjects_Name", "", new { @class = "form-control" })
				</div>
				<input class="btn btn-sm btn-success" type="button" value="Filtruj" onclick="RefreshConnectedObjectsUI();" />
				<input class="btn btn-sm btn-warning" type="button" value="Wyczyść" onclick="ClearConnectedObjectsFilters();" />
			</td>
		</tr>
	</table>
</fieldset>
<div>
	<input id="btnAddObject" type="button" class="btn btn-success" value="Dodaj obiekt" onclick="AddObjectConnection()" />
	<input id="btnRemoveObject" type="button" class="btn btn-danger" value="Usuń zaznaczone obiekty" onclick="RemoveObjectConnection()" />
</div>
<table id="connectedObjectsTable" class="table table-striped table-condensed table-bordered">
	<thead>
		<tr>
			<th class="text-center" width="8%">
				<input onclick="CheckOrUncheckOptions('connectedObjectsTable')" value="Zaznacz/odznacz" class="btn btn-link" />
			</th>
			<th class="text-right">
				<input onclick="SortObjects('Id', true)" value="Id" class="btn btn-link" type="button" />
			</th>
			<th class="text-left">
				<input onclick="SortObjects('Name', true)" value="Nazwa" class="btn btn-link" type="button" />
			</th>
			<th class="text-center">
				<input onclick="SortObjects('TypeName', true)" value="Typ" class="btn btn-link" type="button" />
			</th>
			<th class="text-center">
				<input onclick="SortObjects('Mime', true)" value="Mime" class="btn btn-link" type="button" />
			</th>
		</tr>
	</thead>
	<tbody></tbody>
</table>

<div id="dialog-availableObjects" style="display: none" title="Wybierz obiekty">
	<p>
		<fieldset class="panel-group">
			<table class="filters-table">
				<tr>
					<td class="col-width-180">
						<div class="single-filter-div single-filter-div100">
							@Html.Label("Filter_AvailableObjects_Name", "Filtruj po nazwie/typie/mime : ")
							@Html.TextBox("Filter_AvailableObjects_Name", "", new { @class = "form-control" })
						</div>
					</td>
				</tr>
				<tr>
					<td class="col-width-180" style="vertical-align: bottom" rowspan="2">
						<div class="single-filter-div single-filter-div100">
							<input class="btn btn-sm btn-success" type="button" value="Filtruj" onclick="RefreshAvailableObjectsUI();" />
							<input class="btn btn-sm btn-warning" type="button" value="Wyczyść" onclick="ClearAvailableObjectsFilters();" />
						</div>
					</td>
				</tr>
			</table>
		</fieldset>
		<table id="availableObjectsTable" class="table table-striped table-condensed table-bordered">
			<thead>
				<tr>
					<th class="text-center" width="8%">
						<input type="button" onclick="CheckOrUncheckOptions('availableObjectsTable')" value="Zaznacz/odznacz" class="btn btn-link" />
					</th>
					<th class="text-right">
						<input onclick="SortObjects('Id', false)" value="Id" class="btn btn-link" type="button" />
					</th>
					<th class="text-left">
						<input onclick="SortObjects('Name', false)" value="Nazwa" class="btn btn-link" type="button" />
					</th>
					<th class="text-center">
						<input onclick="SortObjects('TypeName', false)" value="Typ" class="btn btn-link" type="button" />
					</th>
					<th class="text-center">
						<input onclick="SortObjects('Mime', false)" value="Mime" class="btn btn-link" type="button" />
					</th>
				</tr>
			</thead>
			<tbody></tbody>
		</table>
	</p>
</div>
